{
  "expo": {
    "name": "B-Live",
    "slug": "b-live",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icons.png",
    "scheme": "b-live",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.espoirbalezi.blives",
      "buildNumber": "3",
      "infoPlist": {
        "NSCameraUsageDescription": "Cette application a besoin d'accéder à la caméra pour permettre la capture de votre photo de profile.",
        "NSPhotoLibraryUsageDescription": "Cette application a besoin d'accéder à votre photothèque pour la sélection de photo de profile.",
        "NSPhotoLibraryAddUsageDescription": "Cette application a besoin d'ajouter des photos à votre photothèque, par exemple lors de la sauvegarde d'une photo de billet.",
        "NSMicrophoneUsageDescription": "Cette application peut utiliser le microphone lors de la capture de vidéos ou d'enregistrements audio.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "versionCode": 3,
      "package": "com.blives.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icons.png",
        "backgroundColor": "#222222"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/icons.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#222222",
          "image": "./assets/images/icons.png",
          "dark": {
            "image": "./assets/images/icons.png",
            "backgroundColor": "#222222"
          },
          "resizeMode": "contain",
          "imageWidth": 200
        }
      ],
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": true,
          "supportsPictureInPicture": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "68b7c230-c0f9-4dbb-882e-1340bee0cee2"
      },
      "router": {}
    }
  }
}
